<p id="notice"><%= notice %></p>

<h1>Properties list</h1>
<table>
  <thead>
    <tr>
      <th>Property Name</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Age</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.property_name %></td>
        <td><%= property.rent %></td>
        <td><%= property.address %></td>
        <td><%= property.age %></td>
        <td><%= property.remark %></td>
        <td><%= link_to 'See', property_path(property.id) %></td>
        <td><%= link_to "Edit", edit_property_path(property.id) %></td>
        <td><%= link_to 'Delete', property_path(property.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

